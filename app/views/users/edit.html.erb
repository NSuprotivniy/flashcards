<% provide(:title, "Настройки") %>
<h1>Настройки аккаунта</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :name, "Имя" %>
      <%= f.text_field :name %>

      <%= f.label :email, "Электронная почта" %>
      <%= f.text_field :email %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Подтверждение пароля" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Сохранить настройки", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= link_to "Удалить аккаунт", current_user, method: :delete,
                                  data: { confirm: "Вы уверены?" } , class: "btn btn-large"%>
  </div>
</div>